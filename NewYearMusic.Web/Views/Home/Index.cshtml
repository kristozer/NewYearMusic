@model IEnumerable<SongItemViewModel>
@{
    ViewData["Title"] = "Список песен на новый год";
}
<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" class="position-fixed mb-2">
            <h2>Добавление песен</h2>
            <div class="mx-auto">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Название">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="author" id="author" placeholder="Автор">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" id="description" placeholder="Описание">
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </div>
        </form>
    }
    <div class="container">
        @if (Model.Any())
        {
            <div class="row border-bottom box-shadow h4">
                <div class="col-lg">
                    Наименование
                </div>
                <div class="col-lg">
                    Автор
                </div>
                <div class="col-lg">
                    Описание
                </div>
                <div class="col-lg">
                    Дата редактирования
                </div>
                <div class="col-lg">
                </div>
            </div>
            @foreach (var song in Model)
            {
                <div class="row">
                    <div class="col-lg border-bottom">
                        @song.Name
                    </div>
                    <div class="col-lg border-bottom">
                        @song.Author
                    </div>
                    <div class="col-lg border-bottom">
                        @song.Description
                    </div>
                    <div class="col-lg border-bottom">
                        @song.EditionDate
                    </div>
                    <div class="col-lg border-bottom">
                        <a asp-controller="SongManage" asp-route-id="@song.Id" asp-route-actionHandler="update">Изменить</a>
                        <a asp-controller="SongManage" asp-route-id="@song.Id" asp-route-actionHandler="delete">Удалить</a>
                    </div>
                </div>
            }
        }
    </div>
</div>